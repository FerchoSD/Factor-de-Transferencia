/* Variables globales */
:root {
  --primary-color: #2E5A87; /* Azul médico suave */
  --primary-dark: #1E3C5A; /* Variante oscura del azul */
  --primary-light: #4D7AA7; /* Variante clara del azul */
  --secondary-color: #4CAF50; /* Verde salud */
  --secondary-dark: #388E3C; /* Variante oscura del verde */
  --secondary-light: #6FBF73; /* Variante clara del verde */
  --accent-color: #FFD700; /* Dorado premium */
  --accent-dark: #E6C200; /* Variante oscura del dorado */
  --text-color: #333333; /* Texto oscuro */
  --text-light: #666666; /* Texto secundario */
  --text-lighter: #999999; /* Texto terciario */
  --bg-color: #F8FAFC; /* Fondo claro */
  --bg-alt: #ECF0F5; /* Fondo alternativo */
  --white: #FFFFFF; /* Blanco puro */
  --error: #E74C3C; /* Rojo error */
  --success: #2ECC71; /* Verde éxito */
  --warning: #F39C12; /* Naranja advertencia */
  --border-radius-sm: 8px;
  --border-radius: 12px;
  --border-radius-lg: 16px;
  --box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
  --box-shadow-hover: 0 10px 25px rgba(0, 0, 0, 0.15);
  --box-shadow-sm: 0 3px 10px rgba(0, 0, 0, 0.08);
  --transition: all 0.4s ease;
  --transition-fast: all 0.2s ease;
  --transition-slow: all 0.6s ease;
  --gradient-hero: linear-gradient(135deg, rgba(46, 90, 135, 0.85), rgba(76, 175, 80, 0.7));
  --gradient-card: linear-gradient(135deg, rgba(46, 90, 135, 0.05), rgba(76, 175, 80, 0.05));
}

/* Reset y Base */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
  font-size: 16px;
}

body {
  font-family: "Montserrat", sans-serif;
  font-weight: 400;
  line-height: 1.6;
  color: var(--primary-color);secondary-color); 
  margin-bottom: 25px; 
}

.producto-info p { 
  font-size: 1.1rem; 
  line-height: 1.8; 
}

.producto-features { 
  list-style: none; 
  padding: 0; 
  margin-bottom: 30px; 
}

.producto-features li {
  display: flex;
  align-items: center;
  gap: 12px;
  font-size: 1.1rem;
  margin-bottom: 15px;
  font-weight: 500;
  color: var(--primary-color);text-color);
}

.producto-features i { 
  color: var(--primary-color);secondary-color); 
  font-size: 1.3rem; 
  animation: bounce 2s infinite; 
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-5px); }
}

.productos-relacionados {
  padding: 80px 0;
  background: linear-gradient(to bottom, var(--bg-alt), var(--bg-color));
}

.recomendados-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 30px;
  margin-top: 40px;
}

.producto-recomendado {
  background: var(--white);
  border-radius: var(--border-radius);
  padding: 25px;
  text-align: center;
  box-shadow: var(--box-shadow);
  transition: var(--transition);
}

.producto-recomendado:hover {
  transform: translateY(-8px);
  box-shadow: var(--box-shadow-hover);
}

.producto-recomendado img {
  width: 100%;
  height: 150px;
  object-fit: cover;
  border-radius: var(--border-radius);
  margin-bottom: 15px;
  transition: transform 0.4s ease;
}

.producto-recomendado:hover img { 
  transform: scale(1.05); 
}

.producto-recomendado h4 { 
  font-size: 1.3rem; 
  font-weight: 600; 
  margin-bottom: 10px; 
}

.producto-recomendado p { 
  font-size: 1rem; 
  color: var(--primary-color);secondary-color); 
  margin-bottom: 15px; 
}

/* Carrito Premium */
.carrito { 
  padding: 160px 0 100px; 
}

.carrito-items { 
  margin-bottom: 50px; 
}

.carrito-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25px;
  background: var(--white);
  border-radius: var(--border-radius);
  box-shadow: var(--box-shadow);
  margin-bottom: 25px;
  transition: var(--transition);
}

.carrito-item:hover {
  box-shadow: var(--box-shadow-hover);
  transform: translateY(-5px);
}

.carrito-item img {
  width: 90px;
  height: 90px;
  object-fit: cover;
  border-radius: var(--border-radius);
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.carrito-item-info { 
  flex: 1; 
  margin-left: 25px; 
}

.carrito-item-info h4 { 
  font-size: 1.4rem; 
  font-weight: 600; 
  margin-bottom: 10px; 
}

.carrito-item-info p { 
  font-size: 1rem; 
  margin-bottom: 8px; 
}

.carrito-item-info input[type="number"] {
  width: 60px;
  padding: 8px;
  border: 1px solid #ddd;
  border-radius: var(--border-radius);
  font-size: 1rem;
  text-align: center;
}

.carrito-item-precio { 
  font-size: 1.4rem; 
  font-weight: 700; 
  color: var(--primary-color);secondary-color); 
}

.carrito-total { 
  text-align: right; 
  margin-bottom: 50px; 
}

.carrito-total h3 { 
  font-size: 2rem; 
  font-weight: 700; 
}

.carrito-total span { 
  color: var(--primary-color);accent-color); 
}

.carrito-checkout {
  background: var(--white);
  border-radius: var(--border-radius);
  padding: 40px;
  box-shadow: var(--box-shadow);
  max-width: 600px;
  margin: 0 auto;
}

.carrito-checkout h3 {
  margin-bottom: 30px;
  text-align: center;
  font-size: 1.8rem;
}

.acciones {
  display: flex;
  gap: 20px;
  margin-top: 30px;
  flex-wrap: wrap;
}

/* Contacto Premium */
.contacto { 
  padding: 160px 0 100px; 
  background: var(--bg-color); 
}

.contacto-content { 
  display: flex; 
  gap: 50px; 
  flex-wrap: wrap; 
  justify-content: center; 
}

.contacto-form {
  background: var(--white);
  border-radius: var(--border-radius);
  padding: 40px;
  box-shadow: var(--box-shadow);
  width: 100%;
  max-width: 500px;
  transition: var(--transition);
}

.contacto-form:hover { 
  box-shadow: var(--box-shadow-hover); 
}

.contacto-info {
  background: var(--white);
  border-radius: var(--border-radius);
  padding: 40px;
  box-shadow: var(--box-shadow);
  width: 100%;
  max-width: 500px;
}

.contacto-info h3 {
  margin-bottom: 30px;
  position: relative;
}

.contacto-info h3::after {
  content: "";
  display: block;
  width: 50px;
  height: 3px;
  background: var(--secondary-color);
  margin-top: 10px;
  border-radius: 2px;
}

.contacto-info p {
  display: flex;
  align-items: center;
  gap: 15px;
  margin-bottom: 20px;
}

.contacto-info i {
  font-size: 1.5rem;
  color: var(--primary-color);primary-color);
  width: 30px;
  text-align: center;
}

.form-group { 
  margin-bottom: 25px; 
}

.form-group label {
  display: block;
  font-weight: 600;
  margin-bottom: 10px;
  color: var(--primary-color);primary-color);
}

.form-group input, .form-group textarea {
  width: 100%;
  padding: 14px;
  border: 1px solid #ddd;
  border-radius: var(--border-radius);
  font-size: 1rem;
  font-family: "Montserrat", sans-serif;
  transition: var(--transition-fast);
}

.form-group input:focus, .form-group textarea:focus {
  border-color: var(--primary-color);
  outline: none;
  box-shadow: 0 0 8px rgba(46, 90, 135, 0.3);
}

.form-group textarea { 
  resize: vertical; 
  min-height: 140px; 
}

.form-group input.error, .form-group textarea.error {
  border-color: var(--error);
  box-shadow: 0 0 8px rgba(231, 76, 60, 0.3);
}

.form-group input[type="checkbox"] {
  width: auto;
  margin-right: 10px;
}

.form-group input[type="checkbox"] + label {
  display: inline-block;
  font-weight: 400;
}

.whatsapp-btn {
  position: fixed;
  bottom: 30px;
  left: 30px;
  z-index: 900;
}

.whatsapp-btn a {
  display: inline-flex;
  align-items: center;
  gap: 12px;
  background: #25D366;
  color: var(--primary-color);white);
  padding: 12px 25px;
  border-radius: var(--border-radius);
  font-size: 1.1rem;
  font-weight: 600;
  transition: var(--transition);
  box-shadow: var(--box-shadow);
}

.whatsapp-btn a:hover {
  background: #1ebe52;
  transform: translateY(-4px);
  box-shadow: var(--box-shadow-hover);
  color: var(--primary-color);white);
}

/* Terminos y Politicas */
.terminos {
  padding: 160px 0 100px;
}

.terminos-content {
  background: var(--white);
  border-radius: var(--border-radius);
  padding: 40px;
  box-shadow: var(--box-shadow);
}

.terminos-content h3 {
  margin-top: 40px;
  margin-bottom: 15px;
  color: var(--primary-color);primary-color);
}

.terminos-content h3:first-child {
  margin-top: 0;
}

/* Nosotros Premium */
.nosotros { 
  padding: 160px 0 100px; 
}

.nosotros-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 35px;
  margin-top: 40px;
}

.nosotros-item {
  background: var(--white);
  border-radius: var(--border-radius);
  padding: 35px;
  text-align: center;
  box-shadow: var(--box-shadow);
  transition: var(--transition);
  height: 100%;
}

.nosotros-item:hover {
  transform: translateY(-10px);
  box-shadow: var(--box-shadow-hover);
}

.nosotros-icon {
  font-size: 2.8rem;
  color: var(--primary-color);secondary-color);
  margin-bottom: 25px;
  transition: transform 0.3s ease;
}

.nosotros-item:hover .nosotros-icon { 
  transform: scale(1.2) rotate(10deg); 
}

/* Footer Premium */
.site-footer {
  background: var(--white);
  padding: 60px 0 40px;
  box-shadow: 0 -6px 20px rgba(0, 0, 0, 0.05);
  position: relative;
}

.footer-content {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 40px;
  margin-bottom: 40px;
}

.footer-logo, .footer-links, .footer-contact, .footer-social {
  flex: 1;
  min-width: 200px;
}

.footer-logo img { 
  width: 80px; 
  height: 80px; 
  margin-bottom: 20px; 
  transition: var(--transition); 
}

.footer-logo:hover img { 
  transform: rotate(360deg); 
}

.footer-links ul { 
  list-style: none; 
  margin-bottom: 0;
}

.footer-links li { 
  margin-bottom: 12px; 
}

.footer-links a { 
  font-weight: 500; 
  transition: var(--transition-fast); 
}

.footer-links a:hover { 
  color: var(--primary-color);secondary-color); 
  padding-left: 10px; 
}

.footer-contact .info-item {
  display: flex;
  align-items: flex-start;
  gap: 15px;
  margin-bottom: 20px;
}

.footer-contact i { 
  font-size: 1.5rem; 
  color: var(--primary-color);primary-color); 
  margin-top: 5px; 
}

.footer-social a {
  font-size: 1.8rem;
  margin-right: 20px;
  color: var(--primary-color);primary-color);
  transition: var(--transition);
  display: inline-block;
}

.footer-social a:hover { 
  color: var(--primary-color);secondary-color); 
  transform: translateY(-5px); 
}

.footer-bottom {
  text-align: center;
  padding-top: 30px;
  border-top: 1px solid #E6E6E6;
  font-size: 0.9rem;
  color: var(--primary-color);text-light);
}

.footer-legal {
  margin-top: 15px;
}

.footer-legal a {
  margin: 0 15px;
  color: var(--primary-color);text-light);
}

.footer-legal a:hover {
  color: var(--primary-color);primary-color);
}

/* Back to Top Premium */
.back-to-top {
  position: fixed;
  bottom: 40px;
  right: 40px;
  background: var(--primary-color);
  color: var(--primary-color);white);
  width: 50px;
  height: 50px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.5rem;
  opacity: 0;
  visibility: hidden;
  transition: var(--transition);
  box-shadow: var(--box-shadow);
  z-index: 900;
}

.back-to-top.visible { 
  opacity: 1; 
  visibility: visible; 
}

.back-to-top:hover {
  background: var(--secondary-color);
  transform: translateY(-8px) rotate(360deg);
  box-shadow: var(--box-shadow-hover);
  color: var(--primary-color);white);
}

/* Notificaciones */
#notification-container {
  position: fixed;
  top: 20px;
  right: 20px;
  z-index: 9999;
}

.notification {
  background: var(--white);
  border-radius: var(--border-radius);
  padding: 15px 20px;
  margin-bottom: 10px;
  box-shadow: var(--box-shadow);
  display: flex;
  align-items: center;
  gap: 15px;
  animation: slideInRight 0.3s forwards;
  max-width: 350px;
}

.notification.success {
  border-left: 4px solid var(--success);
}

.notification.error {
  border-left: 4px solid var(--error);
}

.notification.info {
  border-left: 4px solid var(--primary-color);
}

.notification.warning {
  border-left: 4px solid var(--warning);
}

.notification-icon {
  font-size: 1.5rem;
}

.notification.success .notification-icon {
  color: var(--primary-color);success);
}

.notification.error .notification-icon {
  color: var(--primary-color);error);
}

.notification.info .notification-icon {
  color: var(--primary-color);primary-color);
}

.notification.warning .notification-icon {
  color: var(--primary-color);warning);
}

.notification-content {
  flex: 1;
}

.notification-title {
  font-weight: 600;
  margin-bottom: 5px;
}

.notification-message {
  font-size: 0.9rem;
  color: var(--primary-color);text-light);
}

.notification-close {
  font-size: 1.2rem;
  color: var(--primary-color);text-lighter);
  cursor: pointer;
  transition: var(--transition-fast);
}

.notification-close:hover {
  color: var(--primary-color);text-color);
}

@keyframes slideInRight {
  from {
    transform: translateX(100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

@keyframes slideOutRight {
  from {
    transform: translateX(0);
    opacity: 1;
  }
  to {
    transform: translateX(100%);
    opacity: 0;
  }
}

/* Animaciones */
.animate-on-scroll {
  opacity: 0;
  transform: translateY(30px);
  transition: opacity 0.8s ease, transform 0.8s ease;
}

.animate-on-scroll.visible {
  opacity: 1;
  transform: translateY(0);
}

.fade-left {
  transform: translateX(-50px);
}

.fade-right {
  transform: translateX(50px);
}

.fade-up {
  transform: translateY(50px);
}

.fade-down {
  transform: translateY(-50px);
}

.zoom-in {
  transform: scale(0.8);
}

.zoom-out {
  transform: scale(1.2);
}

/* Responsive Design Premium */
@media (max-width: 1280px) {
  .carousel-btn.prev { 
    left: -40px; 
  }
  
  .carousel-btn.next { 
    right: -40px; 
  }
}

@media (max-width: 1024px) {
  .producto { 
    flex: 0 0 calc(50% - 25px); 
  }
  
  .beneficios-grid {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  }
  
  .carousel-btn.prev { 
    left: 10px; 
    z-index: 5;
  }
  
  .carousel-btn.next { 
    right: 10px; 
    z-index: 5;
  }
}

@media (max-width: 768px) {
  .menu-toggle { 
    display: block; 
  }
  
  .nav-links {
    position: fixed;
    top: 80px;
    left: 0;
    right: 0;
    background: var(--white);
    flex-direction: column;
    padding: 20px;
    display: none;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    z-index: 900;
  }
  
  .nav-links.active { 
    display: flex; 
  }
  
  .nav-btn { 
    width: 100%; 
    text-align: center; 
  }
  
  .hero-content h1 { 
    font-size: 2.5rem; 
  }
  
  .hero-content p { 
    font-size: 1.1rem; 
  }
  
  .carrusel-slide {
    height: 400px;
  }
  
  .carrusel-caption {
    left: 20px;
    bottom: 20px;
    padding: 15px 20px;
    max-width: 300px;
  }
  
  .carrusel-caption h3 {
    font-size: 1.5rem;
  }
  
  .carrusel-caption p {
    font-size: 1rem;
  }
  
  .producto { 
    flex: 0 0 calc(100% - 25px); 
  }
  
  .producto-detalle .producto-content { 
    flex-direction: column; 
    gap: 30px; 
    padding: 30px; 
  }
  
  .producto-img-principal { 
    height: 350px; 
  }
  
  .footer-content {
    justify-content: flex-start;
  }
  
  .whatsapp-btn {
    bottom: 100px;
  }
}

@media (max-width: 480px) {
  .logo-container h1 {
    font-size: 1.5rem;
  }
  
  .logo {
    width: 50px;
    height: 50px;
  }
  
  .hero {
    padding: 140px 0 80px;
  }
  
  .hero-content h1 { 
    font-size: 2rem; 
  }
  
  .hero-content p { 
    font-size: 1rem; 
  }
  
  .btn-primary { 
    padding: 12px 25px; 
    font-size: 1rem; 
  }
  
  .app-links {
    flex-direction: column;
    align-items: center;
  }
  
  .carrusel-slide {
    height: 300px;
  }
  
  .section-header h2 {
    font-size: 1.8rem;
  }
  
  .filtros-productos {
    flex-direction: column;
  }
  
  .producto-detalle { 
    padding: 140px 0 80px; 
  }
  
  .producto-img-principal { 
    height: 250px; 
  }
  
  .producto-info h2 { 
    font-size: 2rem; 
  }
  
  .carrito-item {
    flex-direction: column;
    text-align: center;
    gap: 20px;
  }
  
  .carrito-item-info {
    margin-left: 0;
  }
  
  .back-to-top {
    bottom: 20px;
    right: 20px;
    width: 40px;
    height: 40px;
    font-size: 1.2rem;
  }
  
  .whatsapp-btn {
    bottom: 80px;
    left: 20px;
  }
  
  .whatsapp-btn a {
    padding: 10px 15px;
    font-size: 0.9rem;
  }
}

body {
  color: var(--primary-color);text-color);
  background: var(--bg-color);
  overflow-x: hidden;
  position: relative;
  min-height: 100vh;
}

body::before {
  content: "";
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="%232E5A87" fill-opacity="0.1" d="M0,160L48,176C96,192,192,224,288,213.3C384,203,480,149,576,138.7C672,128,768,160,864,181.3C960,203,1056,213,1152,197.3C1248,181,1344,139,1392,117.3L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>') no-repeat bottom;
  background-size: cover;
  z-index: -1;
}

img {
  max-width: 100%;
  height: auto;
  object-fit: cover;
}

/* Container */
.container {
  width: 90%;
  max-width: 1280px;
  margin: 0 auto;
  padding: 0 20px;
}

/* Tipografía */
h1, h2, h3, h4, h5, h6 {
  font-family: "Montserrat", sans-serif;
  font-weight: 700;
  color: var(--primary-color);primary-color);
  line-height: 1.2;
  margin-bottom: 0.5em;
}

h1 { 
  font-size: clamp(2.5rem, 5vw, 3.5rem); 
  letter-spacing: -1px; 
  font-weight: 800;
}

h2 { 
  font-size: clamp(2rem, 4vw, 2.5rem);  
  font-weight: 700;
}

h3 { 
  font-size: clamp(1.5rem, 3vw, 1.8rem);
  font-weight: 600;
}

h4 { 
  font-size: clamp(1.1rem, 2vw, 1.3rem);
  font-weight: 600;
}

p { 
  font-size: 1.1rem; 
  color: var(--primary-color);text-light); 
  margin-bottom: 1.25rem; 
  font-weight: 400; 
}

a {
  text-decoration: none;
  color: var(--primary-color);primary-color);
  transition: var(--transition-fast);
}

a:hover { 
  color: var(--primary-color);secondary-color);
}

ul, ol {
  list-style-position: inside;
  margin-bottom: 1.25rem;
}

/* Botones Premium */
.btn-primary {
  background: linear-gradient(135deg, var(--secondary-color), var(--secondary-dark));
  color: var(--primary-color);white);
  padding: 14px 30px;
  border: none;
  border-radius: var(--border-radius);
  font-size: 1.1rem;
  font-weight: 600;
  cursor: pointer;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  transition: var(--transition);
  box-shadow: var(--box-shadow);
  position: relative;
  overflow: hidden;
  text-align: center;
}

.btn-primary::before {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
